/ Corporation and LLC specific fields
div[data-customer-entity-form-target="corporationFields" class="#{form_object.corporation_or_llc? ? '' : 'd-none'}"]
  .row.mb-3
    .col-md-6[data-customer-entity-form-target="jurisdictionField"]
      = form.label :jurisdiction, "Jurisdiction", class: "form-label"
      = form.select :jurisdiction, \
        options_for_select(UsStates.options_for_select.map { |code, name| [name, code] }, form_object.jurisdiction), \
        { include_blank: true }, \
        { class: "form-select #{'is-invalid' if form_object.errors[:jurisdiction].any?}", \
          data: { \
            customer_entity_form_target: "jurisdictionSelect" \
          }, \
          disabled: !form_object.corporation_or_llc? || form_object.international }
      - if form_object.errors[:jurisdiction].any?
        .invalid-feedback
          = form_object.errors[:jurisdiction].first
    .col-md-6
      .form-check.mt-4.pt-2
        = form.check_box :international, \
          class: "form-check-input", \
          data: { \
            customer_entity_form_target: "internationalCheckbox", \
            action: "change->customer-entity-form#toggleInternational" \
          }, \
          disabled: !form_object.corporation_or_llc?
        = form.label :international, "International", class: "form-check-label ms-2"