# frozen_string_literal: true

require 'rails_helper'

RSpec.describe 'Seller Beneficial Owner Management', :js do
  scenario 'adding a beneficial owner to a seller legal entity' do
    organization = create(:organization)
    escrow = create(:escrow, organization: organization)
    officer = create(:person)
    legal_entity = create(:legal_entity, :llc, escrow: escrow, customer_type: 'seller')

    create(:organization_membership, :officer, person: officer, organization: organization)
    Flipper.enable(:fincen, organization)
    sign_in_as(officer)

    visit organization_escrow_fincen_layout_seller_entities_path(organization, escrow)

    expect(page).to have_content(legal_entity.business_name)
    expect(page).to have_content('LLC')

    # Initially no beneficial owners
    within '.card.mb-3', text: legal_entity.business_name do
      expect(page).to have_content('Beneficial Owners')
      expect(page).to have_link('Add Beneficial Owners')
      click_link 'Add Beneficial Owners'
    end

    # On the new beneficial owner form
    expect(page).to have_content('Add Beneficial Owner')
    expect(page).to have_content("for #{legal_entity.business_name}")

    # Fill in the form
    fill_in 'First Name', with: 'Alice'
    fill_in 'Last Name', with: 'Owner'
    fill_in 'Email Address', with: 'alice.owner@example.com'
    fill_in 'Cell Phone', with: '555-234-5678'

    click_button 'Add Beneficial Owner'

    # Back on the index page with success message
    expect(page).to have_content('Beneficial Owner was successfully added')
    expect(page).to have_current_path(organization_escrow_fincen_layout_seller_entities_path(organization, escrow))

    # Verify the owner is displayed
    within '.card.mb-3', text: legal_entity.business_name do
      expect(page).to have_content('Beneficial Owners')
      expect(page).to have_content('Alice Owner')
      expect(page).to have_content('Beneficial Owner')
      expect(page).to have_link('+ Add Additional Beneficial Owner')

      # Add another beneficial owner
      click_link '+ Add Additional Beneficial Owner'
    end

    # Fill in second owner
    fill_in 'First Name', with: 'Bob'
    fill_in 'Last Name', with: 'Partner'
    fill_in 'Email Address', with: 'bob.partner@example.com'
    fill_in 'Cell Phone', with: '555-876-5432'

    click_button 'Add Beneficial Owner'

    # Verify both owners are displayed
    within '.card.mb-3', text: legal_entity.business_name do
      expect(page).to have_content('Beneficial Owners')
      expect(page).to have_content('Alice Owner')
      expect(page).to have_content('Bob Partner')
      expect(page.all('.card', text: 'Beneficial Owner').count).to eq(2)
    end
  end

  scenario 'canceling the add beneficial owner form returns to index' do
    organization = create(:organization)
    escrow = create(:escrow, organization: organization)
    officer = create(:person)
    legal_entity = create(:legal_entity, :llc, escrow: escrow, customer_type: 'seller')

    create(:organization_membership, :officer, person: officer, organization: organization)
    Flipper.enable(:fincen, organization)
    sign_in_as(officer)

    visit new_organization_escrow_fincen_layout_beneficial_owner_path(organization, escrow, legal_entity)

    click_link 'Cancel'

    expect(page).to have_current_path(organization_escrow_fincen_layout_seller_entities_path(organization, escrow))
  end
end