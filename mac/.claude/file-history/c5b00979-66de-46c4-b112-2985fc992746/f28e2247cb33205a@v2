- content_for :title, @presenter.title

= render "shared/fincen_content_wrapper", title: @presenter.title do
  - if @presenter.entities_any?
    / Render individual customers first
    - @presenter.customers.each do |customer|
      = render "customer_card", customer: customer, path: @presenter.customer_path(customer), clickable: true

    / Render legal entities after individual customers
    - @presenter.legal_entities.each do |legal_entity|
      = render "legal_entity_card", legal_entity: legal_entity, presenter: @presenter
  - else
    p= @presenter.empty_state_message

  p.text-end.mt-3.mb-4
    = link_to @presenter.add_customer_text, @presenter.add_customer_path, class: "link-secondary text-decoration-underline"
