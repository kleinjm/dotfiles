{
  "editor.defaultFormatter": "rubocop.vscode-rubocop",
  "editor.formatOnSave": true,
  // Adhere to the POSIX standard on file render
  //
  // When "files.insertFinalNewline" is enabled and "editor.renderFinalNewline"
  // is not enabled, VS Code renders a line after the final newline character.
  // Per the POSIX standard, this additional rendered line is not actually a
  // line because it doesn't terminate with a newline character.  Fix this by
  // disabling this setting.
  "editor.renderFinalNewline": "off",
  "editor.tabSize": 2,
  "editor.trimAutoWhitespace": true,
  "editor.wordWrap": "on",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "git.openRepositoryInParentFolders": "never",
  "[ruby]": {
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },
  "sync.autoUpload": true,
  "sync.gist": "6dc02523361e0893b35243f84371dec8",
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.profiles.linux": {
    "zsh": {
      "path": "/bin/zsh",
      "args": ["-l"]
    }
  },
  "terminal.integrated.scrollback": 99999,
  "vim.useSystemClipboard": true,
  "vim.vimrc.enable": true,
  "vim.vimrc.path": "$HOME/.vimrc",
  "vim.normalModeKeyBindings": [
    {
      "before": ["u"],
      "commands": ["undo"]
    },
    {
      "before": ["<C-r>"],
      "commands": ["redo"]
    }
  ],
  "window.autoDetectColorScheme": true,
  "window.commandCenter": true,
  "workbench.colorCustomizations": {
    "[Monokai]": {
      "panel.background": "#0C0C0B",
      "sideBar.background": "#1E1F1C",
      "terminal.background": "#1E1F1C",
      "terminalCursor.background": "#7EA2B4"
    },
  },
  "workbench.editor.showTabs": "single", // No open file tabs
  "workbench.preferredDarkColorTheme": "Monokai",
  "workbench.preferredLightColorTheme": "Default Light+",
  "workbench.sideBar.location": "right",
  "window.confirmBeforeClose": "always",
  "remote.autoForwardPortsSource": "hybrid",
  "files.exclude": {
    "tmp/capybara/*": true
  },
  "task.allowAutomaticTasks": "on",
  "git.autofetch": true,
  "rubyLsp.rubyVersionManager": {
    "identifier": "none"
  },
  "totalTypeScript.hiddenTips": [
    "basic-types",
    "union-type"
  ] // AI on the left
}
