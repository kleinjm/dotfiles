# Custom prompt to show container (shorter in worktrees)
# Save original oh-my-zsh prompt
ORIGINAL_PROMPT="${PROMPT}"

custom_prompt_precmd() {
  # Check for custom context file
  local ctx_indicator=""
  [[ -f .claude/context.md ]] && ctx_indicator=" %F{gray}ðŸ“%f"

  # Check for stashed changes
  local stash_count=$(git stash list 2>/dev/null | wc -l)
  local stash_indicator=""
  [[ $stash_count -gt 0 ]] && stash_indicator=" %F{yellow}ðŸŽ’ ${stash_count}%f"

  # Git branch and dirty indicator
  local branch=""
  local prompt_end="$"
  if git rev-parse --git-dir &>/dev/null; then
    branch=" %F{blue}(%F{red}$(git branch --show-current 2>/dev/null)%F{blue})%f"
    if [[ -n $(git status --porcelain 2>/dev/null) ]]; then
      prompt_end="%F{yellow}âœ—%f"
    else
      prompt_end="%F{yellow}âœ“%f"
    fi
  fi

  # Build prompt: ðŸ³ âžœ /path (branch) âœ—
  PROMPT="%F{cyan}ðŸ³%f${ctx_indicator}${stash_indicator} %F{green}âžœ%f %F{cyan}%~%f${branch} ${prompt_end} "
}
precmd_functions+=(custom_prompt_precmd)

# Remove DevPod broken SSH wrapper (runs on every shell startup)
git config --global --unset gpg.ssh.program 2>/dev/null || true

# Environment
export EDITOR="nvim"
export GIT_EDITOR="nvim"
export BROWSER="$HOME/.dotfiles/devpod/bin/browser"
export GIT_MERGE_AUTOEDIT=no

# Autosuggestions settings
export ZSH_AUTOSUGGEST_BUFFER_MAX_SIZE=20
export ZSH_AUTOSUGGEST_USE_ASYNC=1

# Enable bash completions in zsh
autoload -U +X bashcompinit && bashcompinit

# GPG setup for DevPod (copy mounted keys to local filesystem for socket support)
if [[ -d "$HOME/.gnupg" ]] && [[ ! -d "/tmp/gnupg-local" ]]; then
  mkdir -p /tmp/gnupg-local
  cp -r "$HOME/.gnupg/"* /tmp/gnupg-local/ 2>/dev/null || true
  chmod 700 /tmp/gnupg-local
  rm -f /tmp/gnupg-local/S.* /tmp/gnupg-local/public-keys.d/.#lk* 2>/dev/null || true
  # Use legacy keyring mode
  echo "" > /tmp/gnupg-local/common.conf
fi
# Always update gpg-agent.conf for cache settings (1 month cache)
if [[ -d "/tmp/gnupg-local" ]]; then
  cat > /tmp/gnupg-local/gpg-agent.conf << 'GPGCONF'
default-cache-ttl 2592000
max-cache-ttl 2592000
allow-loopback-pinentry
GPGCONF
fi
export GNUPGHOME=/tmp/gnupg-local
export GPG_TTY=$(tty)

# SSH agent setup (for git operations via docker exec)
if [[ -z "$SSH_AUTH_SOCK" ]] && [[ -f "$HOME/.ssh/id_ed25519" || -f "$HOME/.ssh/id_rsa" ]]; then
  eval "$(ssh-agent -s)" > /dev/null
  # Add keys silently
  [[ -f "$HOME/.ssh/id_ed25519" ]] && ssh-add "$HOME/.ssh/id_ed25519" 2>/dev/null
  [[ -f "$HOME/.ssh/id_rsa" ]] && ssh-add "$HOME/.ssh/id_rsa" 2>/dev/null
fi

# Completions
source /workspaces/web/tools/wtm/wtm-completion.bash

# Zellij session commands
source "$HOME/.dotfiles/devpod/zellij_start_commands.zsh"

# Aliases and functions
source "$HOME/.dotfiles/devpod/aliases.zsh"
source "$HOME/.dotfiles/devpod/functions.zsh"
