# frozen_string_literal: true

require 'rails_helper'

RSpec.describe 'Buyer Authorized Signatory Management', :js do
  it 'adds an authorized signatory to a buyer legal entity' do
    organization = create(:organization)
    escrow = create(:escrow, organization: organization)
    officer = create(:person)
    legal_entity = create(:legal_entity, :corporation, escrow: escrow, customer_type: 'buyer')

    create(:organization_membership, :officer, person: officer, organization: organization)
    Flipper.enable(:fincen, organization)
    sign_in_as(officer)

    visit organization_escrow_fincen_layout_buyer_entities_path(organization, escrow)

    expect(page).to have_content(legal_entity.business_name)
    expect(page).to have_content('Corporation')

    # Initially no signatories
    within '.card.mb-3', text: legal_entity.business_name do
      expect(page).to have_content('Authorized Signatories')
      expect(page).to have_link('Add Authorized Signatories')
      click_link 'Add Authorized Signatories'
    end

    # On the new authorized signatory form
    expect(page).to have_content('Add Authorized Signatory')
    expect(page).to have_content("for #{legal_entity.business_name}")

    # Fill in the form
    fill_in 'First Name', with: 'John'
    fill_in 'Last Name', with: 'Signatory'
    fill_in 'Email Address', with: 'john.signatory@example.com'
    fill_in 'Cell Phone', with: '555-123-4567'

    click_button 'Add Authorized Signatory'

    # Back on the index page with success message
    expect(page).to have_content('Authorized Signatory was successfully added')
    expect(page).to have_current_path(organization_escrow_fincen_layout_buyer_entities_path(organization, escrow))

    # Verify the signatory is displayed
    within '.card.mb-3', text: legal_entity.business_name do
      expect(page).to have_content('Authorized Signatories')
      expect(page).to have_content('John Signatory')
      expect(page).to have_content('Authorized Signatory')
      expect(page).to have_link('+ Add Additional Signatory')

      # Add another signatory
      click_link '+ Add Additional Signatory'
    end

    # Fill in second signatory
    fill_in 'First Name', with: 'Jane'
    fill_in 'Last Name', with: 'SecondSigner'
    fill_in 'Email Address', with: 'jane.signer@example.com'
    fill_in 'Cell Phone', with: '555-987-6543'

    click_button 'Add Authorized Signatory'

    # Verify both signatories are displayed
    within '.card.mb-3', text: legal_entity.business_name do
      expect(page).to have_content('Authorized Signatories')
      expect(page).to have_content('John Signatory')
      expect(page).to have_content('Jane SecondSigner')
      expect(page.all('.card', text: 'Authorized Signatory').count).to eq(2)
    end
  end

  it 'cancels the add authorized signatory form and returns to index' do
    organization = create(:organization)
    escrow = create(:escrow, organization: organization)
    officer = create(:person)
    legal_entity = create(:legal_entity, :corporation, escrow: escrow, customer_type: 'buyer')

    create(:organization_membership, :officer, person: officer, organization: organization)
    Flipper.enable(:fincen, organization)
    sign_in_as(officer)

    visit new_organization_escrow_fincen_layout_authorized_signatory_path(organization, escrow, legal_entity)

    click_link 'Cancel'

    expect(page).to have_current_path(organization_escrow_fincen_layout_buyer_entities_path(organization, escrow))
  end
end